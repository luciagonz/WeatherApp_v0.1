<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.appclima.appclimanavigation.presentation.fragments.CalendarFragment"
        android:label="@string/title_calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.appclima.appclimanavigation.presentation.fragments.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_weather"
        android:name="com.appclima.appclimanavigation.presentation.fragments.WeatherFragment"
        android:label="@string/title_weather"
        tools:layout="@layout/fragment_weather" />

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.appclima.appclimanavigation.presentation.fragments.UserFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_user" />

    <fragment
        android:id="@+id/navigation_voice"
        android:name="com.appclima.appclimanavigation.presentation.fragments.VoiceFragment"
        android:label="@string/title_voice"
        tools:layout="@layout/fragment_voice" />
</navigation>